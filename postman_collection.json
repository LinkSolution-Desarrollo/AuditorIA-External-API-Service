          },
          "response": []
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Task Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reports/tasks?days=30",
              "host": ["{{base_url}}"],
              "path": ["reports", "tasks"],
              "query": [
                {
                  "key": "days",
                  "value": "30",

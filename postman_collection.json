{
  "info": {
    "name": "AuditorIA External API",
    "description": "API externa para generar auditorías, tags, análisis de hablantes y reportería",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8001",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "TU_API_KEY_AQUI",
      "type": "string"
    },
    {
      "key": "task_uuid",
      "value": "075bcc8c-8fe5-11f0-b36d-0242ac110007",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Audit",
      "item": [
        {
          "name": "Generate Audit for Call",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task_uuid\": \"{{task_uuid}}\",\n  \"is_call\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/audit/generate",
              "host": ["{{base_url}}"],
              "path": ["audit", "generate"]
            }
          },
          "response": []
        },
        {
          "name": "Generate Audit for Chat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task_uuid\": \"{{task_uuid}}\",\n  \"is_call\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/audit/generate",
              "host": ["{{base_url}}"],
              "path": ["audit", "generate"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Get Tags",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tags/{{task_uuid}}",
              "host": ["{{base_url}}"],
              "path": ["tags", "{{task_uuid}}"]
            }
          },
          "response": []
        },
        {
          "name": "Generate New Tags",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tags/{{task_uuid}}?generate_new=true",
              "host": ["{{base_url}}"],
              "path": ["tags", "{{task_uuid}}"],
              "query": [
                {
                  "key": "generate_new",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Speaker Analysis",
      "item": [
        {
          "name": "Get Speaker Analysis",

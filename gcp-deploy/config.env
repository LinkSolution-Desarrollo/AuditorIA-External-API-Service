# =============================================================================
# CONFIGURACIÓN GCP - AuditorIA Cloud Run Deployment
# =============================================================================
# Editá estas variables antes de ejecutar los scripts de deploy.

# --- Proyecto GCP ---
export GCP_PROJECT="test-cloud-01-463920"
export GCP_REGION="southamerica-west1"

# --- Artifact Registry ---
export AR_REPO="auditoria-registry"
export AR_HOST="${GCP_REGION}-docker.pkg.dev"
export IMAGE_PREFIX="${AR_HOST}/${GCP_PROJECT}/${AR_REPO}"

# --- Cloud SQL ---
export SQL_INSTANCE="auditoria-postgres"
export SQL_DB="auditoria_db"
export SQL_USER="auditoria"
# POSTGRES_PASSWORD se guarda en Secret Manager (ver 1-setup.sh)

# --- GCS (para volumen de MinIO) ---
export MINIO_DATA_BUCKET="${GCP_PROJECT}-minio-data"

# --- Service Account ---
export SA_NAME="auditoria-runner"
export SA_EMAIL="${SA_NAME}@${GCP_PROJECT}.iam.gserviceaccount.com"

# --- Nombres de servicios Cloud Run ---
export SVC_MINIO="auditoria-minio"
export SVC_KEYCLOAK="auditoria-keycloak"
export SVC_BACKEND="auditoria-backend"
export SVC_WORKER_DEEPGRAM="auditoria-worker-deepgram"
export SVC_FRONTEND="auditoria-frontend"

# --- Keycloak ---
export KC_REALM="auditoria"
export KC_CLIENT_ID="Auditoria"

# --- MinIO ---
export MINIO_BUCKET_AUDIOS="audios"
export MINIO_BUCKET_AVATARS="avatars"
